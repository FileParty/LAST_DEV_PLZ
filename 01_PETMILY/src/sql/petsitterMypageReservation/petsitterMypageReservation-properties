selectBeforePaymentRerservation=SELECT * FROM PET_RESERVATION P JOIN USER_TABLE U ON(P.USER_ID=U.USER_ID) where pet_setter_id=? and res_type='요청'
selectPetsitterMypageUserReview=SELECT * FROM USER_TABLE U JOIN REVIEW_USER R ON(U.USER_ID=R.USER_ID) JOIN PET_RESERVATION P ON(R.RESERVATION_CODE=P.RESERVATION_CODE) WHERE USER_ID=?
updateStatus=UPDATE PET_RESERVATION SET RES_TYPE=? WHERE RESERVATION_CODE=?
sitterSettledList = SELECT TO_CHAR(CHECKOUT_DATE, 'yyyy"년 "mm"월"') AS PRDATE, COUNT(*) AS NUMALL, SUM(PR.PRICE) AS PRPRICE, SUM(CEIL(PR.PRICE/9)) AS PRCEIL FROM PET_RESERVATION PR JOIN USER_TABLE UT ON(PR.PET_SETTER_ID=UT.USER_ID) WHERE UT.USER_ID=? GROUP BY TO_CHAR(CHECKOUT_DATE, 'yyyy"년 "mm"월"')
selectBeforePaymentDetail = SELECT * FROM PET_RESERVATION P JOIN PET_RES_PET_CODE R ON(P.RESERVATION_CODE=R.RES_CODE) where RESERVATION_CODE=?
selectPetProfile = SELECT * FROM PET_RESERVATION P JOIN PET_RES_PET_CODE R ON(P.RESERVATION_CODE=R.RES_CODE) JOIN PET_INFO I ON(R.PET_CODE=I.PET_CODE) where RESERVATION_CODE=?